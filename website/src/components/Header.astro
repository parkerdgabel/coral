---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/docs', label: 'Docs' },
  { href: '/features', label: 'Features' },
  { href: 'https://github.com/parkerdgabel/coral', label: 'GitHub', external: true },
];
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href="/" class="logo">
        <svg class="logo-icon" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="16" cy="16" r="14" stroke="url(#coral-gradient)" stroke-width="2.5"/>
          <path d="M16 8C16 8 12 12 12 16C12 20 16 24 16 24" stroke="url(#coral-gradient)" stroke-width="2" stroke-linecap="round"/>
          <path d="M16 8C16 8 20 12 20 16C20 20 16 24 16 24" stroke="url(#coral-gradient)" stroke-width="2" stroke-linecap="round"/>
          <circle cx="16" cy="16" r="3" fill="url(#coral-gradient)"/>
          <defs>
            <linearGradient id="coral-gradient" x1="0" y1="0" x2="32" y2="32" gradientUnits="userSpaceOnUse">
              <stop stop-color="#ff4757"/>
              <stop offset="1" stop-color="#0ea5e9"/>
            </linearGradient>
          </defs>
        </svg>
        <span class="logo-text">Coral</span>
      </a>

      <ul class="nav-links">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class="nav-link"
              target={link.external ? '_blank' : undefined}
              rel={link.external ? 'noopener noreferrer' : undefined}
            >
              {link.label}
              {link.external && (
                <svg class="external-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                  <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                </svg>
              )}
            </a>
          </li>
        ))}
      </ul>

      <a href="https://pypi.org/project/coral-ml/" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
        Install
      </a>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--space-md) 0;
    background: rgba(10, 10, 15, 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-color);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1.25rem;
  }

  .logo:hover {
    color: var(--text-primary);
  }

  .logo-icon {
    width: 32px;
    height: 32px;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
    list-style: none;
    padding: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--text-secondary);
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .external-icon {
    width: 14px;
    height: 14px;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }
</style>
